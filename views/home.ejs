<%- include("partials/header"); -%>

<h1 style="font-family: sans-serif">HOME</h1>
<p style="font-family: sans-serif; font-weight: normal; color: rgb(78, 78, 78)">
  <%= startingblog %>
</p>

<% posts.forEach(function(post){ %>

<h1 style="font-family: sans-serif"><%= post.title %></h1>
<p style="font-family: sans-serif; font-weight: normal; color: rgb(78, 78, 78)">
  <%= post.content.substring(0,100) + '...' %><a
    href="/posts/<%= post.title %> "
    style="text-decoration: none; color: rgb(2, 2, 154)"
  >
    Read more</a
  >
</p>
<% }) %>
<a
  name="compose"
  href="compose"
  style="
    background-color: grey;
    font-family: sans-serif;
    border: 2px;
    border-color: black;
    border-radius: 2px;
    color: azure;
    text-decoration: none;
  "
  >Compose Here</a
>
